kind: Namespace
apiVersion: v1
metadata:
  name: ${NAMESPACE}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: k8s-mutate-image-and-policy-webhook
  namespace: ${NAMESPACE}
  labels:
    app: k8s-mutate-image-and-policy-webhook
spec:
  replicas: 2
#  updateStrategy:
#    type: RollingUpdate
  selector:
    matchLabels:
      app: k8s-mutate-image-and-policy-webhook
  template:
    metadata:
      labels:
        app: k8s-mutate-image-and-policy-webhook
    spec:
      containers:
      - name: webhook
        image: vinhph2/k8s-mutate-image-and-policy-webhook
        ports:
        - containerPort: 8443
          name: webhook-api
        volumeMounts:
        - name: webhook-tls-certs
          mountPath: /run/secrets/tls
          readOnly: true
        - name: webhook-config
          mountPath: /tmp/config
          readOnly: true
        args:
          -  '-c'
          - '/tmp/config/config.yaml'
      volumes:
      - name: webhook-tls-certs
        secret:
          secretName: k8s-mutate-image-and-policy-webhook-tls-certs
# Configure the imagePullSecrets to the appropriate value.
      - name: webhook-config
        secret:
          secretName: k8s-mutate-image-and-policy-webhook-config
---
apiVersion: v1
kind: Service
metadata:
  name: k8s-mutate-image-and-policy-webhook
  namespace: ${NAMESPACE}
spec:
  selector:
    app: k8s-mutate-image-and-policy-webhook
  ports:
    - port: 443
      targetPort: webhook-api
---
apiVersion: admissionregistration.k8s.io/v1
kind: MutatingWebhookConfiguration
metadata:
  name: k8s-mutate-image-and-policy-webhook
webhooks:
  - name: k8s-mutate-image-and-policy-webhook.${NAMESPACE}.svc
    clientConfig:
      service:
        name: k8s-mutate-image-and-policy-webhook
        namespace: ${NAMESPACE}
        path: "/mutate"
      caBundle: ${CA_PEM_B64}
    admissionReviewVersions: ["v1"]
    sideEffects: None
    rules:
      - operations: [ "CREATE", "UPDATE" ]
        apiGroups: [""]
        apiVersions: ["v1"]
        resources:
          - pods
#          - persistentvolumeclaims
---
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: k8s-mutate-image-and-policy-webhook-pdb
spec:
  selector:
    matchLabels:
      app: k8s-mutate-image-and-policy-webhook
  maxUnavailable: 1
